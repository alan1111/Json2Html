{
  "widget": "div",
  "jChildren": [
    {
      "widget": "button",
      "jProps": {
        "theme": "primary"
      },
      "jChildren": {
        "widget": "div",
        "jProps": {
          "label": "我是父级是zarm组件传入了theme， 我是自定义组件，设置了颜色样式",
          "style": {
            "color": "yellow"
          }
        }
      }
    },
    {
      "widget": "button",
      "jProps": {
        "style": {
          "marginLeft": "10px"
        }
      },
      "jChildren": {
        "widget": "div",
        "jProps": {
          "label": "我是父级是zarm组件设置了左边距10px， 我是自定义组件，设置了noTag",
          "noTag": true
        }
      }
    },
    {
      "widget": "button",
      "action": {
        "type": "toast",
        "data": {
          "message": "我是点击动作触发的toast。"
        }
      },
      "jProps": {
        "block": true,
        "theme": "primary",
        "style": {
          "marginTop": "50px"
        }
      },
      "jChildren": {
        "widget": "div",
        "jProps": {
          "label": "点击我触发action，将会触发toast动作",
          "noTag": true
        }
      }
    },
    {
      "widget": "input",
      "dataBind": "mobile",
      "rules": [
        {
          "message": "请输入手机号",
          "required": true
        },
        {
          "pattern": "^1[3456789]\\d{9}$",
          "message": "请输入正确的手机号"
        }
      ],
      "jProps": {
        "label": "手机号码",
        "placeholder": "请输入手机号码",
        "maxLength": "11"
      }
    },
    {
      "widget": "input",
      "dataBind": "smscode",
      "linkage": "let mobileVal = $globalState.mobile; if(mobileVal && /^1[3456789]\\d{9}$/.test(mobileVal)){return {}}",
      "rules": [
        {
          "message": "请输入验证码",
          "required": true
        }
      ],
      "jProps": {
        "label": "验证码",
        "placeholder": "请输入验证码",
        "maxLength": "6"
      }
    },
    {
      "widget": "button",
      "action": {
        "type": "onSubmit",
        "data": "我是json配置的数据data"
      },
      "jProps": {
        "theme": "primary"
      },
      "jChildren": {
        "widget": "div",
        "jProps": {
          "label": "提交（可以查看控制台表单数据）"
        }
      }
    }
  ]
}